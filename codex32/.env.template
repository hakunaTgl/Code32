# Codex-32 Environment Variables Template
# Copy this to .env and update values for your environment

# Application Settings
APP_NAME=Codex-32 AI Orchestration System
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=CHANGE_THIS_IN_PRODUCTION_generate_strong_random_key
API_ALGORITHM=HS256
API_ACCESS_TOKEN_EXPIRE_MINUTES=30
API_REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
DATABASE_URL=postgresql+asyncpg://codex_user:codex_password@localhost:5432/codex32
DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration (Self-Knowledge Base)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_CACHE_TTL_SECONDS=3600

# Bot Registry & Management
REGISTRY_FILE=codex32_registry.json
BOTS_DIRECTORY=bots
DEFAULT_BOT_CPU_REQUEST=100m
DEFAULT_BOT_MEM_REQUEST=128Mi
DEFAULT_BOT_CPU_LIMIT=500m
DEFAULT_BOT_MEM_LIMIT=512Mi

# Monitoring & Resource Management
MEMORY_THRESHOLD_MB=500
CPU_THRESHOLD_PERCENT=90.0
MONITORING_INTERVAL_SEC=30
HEALTH_CHECK_INTERVAL_SEC=10

# Custom Container Engine Configuration
# Storage directory for custom containers (no Docker required)
CONTAINER_STORAGE_DIR=/tmp/codex32-containers
CONTAINER_ISOLATION_LEVEL=standard

# Kubernetes Configuration
KUBECONFIG_PATH=~/.kube/config
KUBERNETES_NAMESPACE=codex-32
DEFAULT_REPLICAS=1

# Conversational AI Configuration
RASA_URL=
STT_PROVIDER=vosk
GOOGLE_APPLICATION_CREDENTIALS=
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=
VOSK_MODEL_PATH=./vosk_model_small

# Security Settings
ADMIN_API_KEY=CHANGE_THIS_IN_PRODUCTION_generate_strong_random_key
CORS_ORIGINS=*
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD_SECONDS=60

# Feature Flags
ENABLE_CONVERSATIONAL_AI=true
ENABLE_VOICE_INPUT=true
ENABLE_SELF_KNOWLEDGE=true
ENABLE_ANOMALY_DETECTION=false
